@model IEnumerable<PCbuild_ASP.MVC_.Domain.Entities.GPU>

@{
    ViewBag.Title = "GPUs";
}

<h2>GPUs</h2>


<p>@Html.ActionLink("Create New","Create")</p>
<table class="table">

    <tr>
        <th>@Html.DisplayNameFor(Model => Model.Manufacture)</th>
        <th>@Html.DisplayNameFor(Model => Model.Name)</th>
        <th>@Html.DisplayNameFor(Model => Model.Architecture)</th>
        <th>@Html.DisplayNameFor(Model => Model.BoostClock)</th>
        <th>@Html.DisplayNameFor(Model => Model.FrameBuffer)</th>
        <th>@Html.DisplayNameFor(Model => Model.MemorySpeed)</th>
        <th>@Html.DisplayNameFor(Model => Model.AverageBench)</th>
        @*<th>@Html.DisplayNameFor(Model => Model.PriceGPUs)</th>*@
        <th></th>
    </tr>
    @foreach(var item in Model)
    {
    <tr>
        <td>@Html.DisplayFor(ItemModel => item.Manufacture)</td>
        <td>@Html.DisplayFor(ItemModel => item.Name)</td>
        <td>@Html.DisplayFor(ItemModel => item.Architecture)</td>
        <td>@Html.DisplayFor(ItemModel => item.BoostClock)</td>
        <td>@Html.DisplayFor(ItemModel => item.FrameBuffer)</td>
        <td>@Html.DisplayFor(ItemModel => item.MemorySpeed)</td>
        <td>@Html.DisplayFor(ItemModel => item.AverageBench)</td>
        @*<td>@Html.DisplayFor(ItemModel=> item.prices.FirstOrDefault().Amount.ToString())</td>*@
        <td>
            @Html.ActionLink("Edit","Edit", new { id=item.GPUID}) |
            @Html.ActionLink("Delete","Delete", new { id=item.GPUID})
        </td>
    </tr>
    }
</table>

