    <div>
        @Html.ActionLink("Edit account information", "Edit","Manage",null,new { @class="btn btn-primary"})
    </div>
    <div>
        @Html.ActionLink("Change password", "ChangePassword","Manage", null, new { @class = "btn btn-primary" })
    </div>
    @*<div>
        @Html.ActionLink("Delete account", "Delete",null, new { @class="btn btn-primary"})
