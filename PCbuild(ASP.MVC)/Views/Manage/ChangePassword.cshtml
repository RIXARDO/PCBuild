@model PCbuilder_ASP.MVC_.Models.Identity.PasswordChangeModel

@{
    ViewBag.Title = "ChangePassword";
}

<h2>Change Password</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true,"")

    <div class="form-horizontal">
        <div class="form-group">
            <div>
                Current password
            </div>
            <div>
                @Html.TextBoxFor(x=>x.CurrentPassword, new { @class="form-control", @type = "password" })
            </div>
        </div>
        <div class="form-group">
            <div>
                New password
            </div>
            <div>
                @Html.TextBoxFor(x => x.NewPassword, new { @class = "form-control", @type="password" })
            </div>
        </div>
        <div class="form-group">
            <div>
                Confirm new password
            </div>
            <div>
                @Html.TextBoxFor(x => x.ConfirmNewPassword, new { @class = "form-control", @type = "password" })
            </div>
        </div>

        <input type="submit" value="Confirm" class="btn btn-primary" />
    </div>
}