@model IEnumerable<PCbuild_ASP.MVC_.Domain.Entities.Game>

@{
    ViewBag.Title = "Games";
}

<h2>Games</h2>

<table class="table">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Actions</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.GameID</td>
            <td>@Html.ActionLink(item.Name, "Edit", new { item.GameID })</td>
            <td>
                @using (Html.BeginForm("Delete", "Games"))
                {
                    @Html.Hidden("GameID", item.GameID)
                    <input type="submit" value="Delete" class="btn btn-danger"/>
                }
            </td>
        </tr>
    }
</table>
<p>@Html.ActionLink("Add a new product", "Create")</p>

