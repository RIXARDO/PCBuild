            @Html.DisplayFor(modelItem => item.ProcessorNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfCores)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NumberOfThreads)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PBF)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cache)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TDP)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.AverageBench)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProductGuid }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.CPUID }) |*@
