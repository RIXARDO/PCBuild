@model IEnumerable<PCbuilder_ASP.MVC_.Models.ViewModel.CPUViewModel>

@{
    ViewBag.Title = "CPUs Admin";
}

<h2>CPUs</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Manufacture)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProcessorNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfCores)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.NumberOfThreads)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PBF)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cache)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TDP)
